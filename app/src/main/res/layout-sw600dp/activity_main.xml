<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cz.muni.fi.pv256.movio2.fk410022.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cz.muni.fi.pv256.movio2.fk410022.MainActivity">

        <TextView
            android:id="@+id/popular_movies_title"
            style="@style/TitleText"
            android:text="@string/popular_movies"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_popular_movies"
            android:layout_width="wrap_content"
            android:layout_height="252dp"
            />

        <TextView
            android:id="@+id/popular_shows_title"
            style="@style/TitleText"
            android:text="@string/popular_shows"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_popular_shows"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            />
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
</LinearLayout>
