<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/popular_movies_title"
        style="@style/RecyclerViewWhiteTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/accessibility_recent_popular_movies"
        android:text="@string/recent_popular_movies"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_popular_movies"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poster_height"/>

    <TextView
        android:id="@+id/current_year_popular_animated_movies_title"
        style="@style/RecyclerViewWhiteTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_current_year_popular_animated_movies"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poster_height"/>

    <TextView
        android:id="@+id/scifi_movies_title"
        style="@style/RecyclerViewWhiteTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/accessibility_highly_rated_scifi_movies"
        android:text="@string/highly_rated_scifi_movies"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_scifi_movies"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poster_height"/>
</LinearLayout>
