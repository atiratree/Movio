<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="colorPrimary">@color/my_theme_primary</item>
        <item name="colorPrimaryDark">@color/my_theme_primary_dark</item>
        <item name="colorAccent">@color/my_theme_accent</item>
        <item name="android:background">@color/my_theme_accent</item>
    </style>

</resources>
